<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common_activities.contact_us">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="?bgColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/help_border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Subject: "
                android:textColor="?txtColor"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/subject_pick"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="0dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/help_border"
            android:ems="10"
            android:textColor="?txtColor"
            android:gravity="start|top"
            android:hint="Type your message..."
            android:padding="20dp"
            android:textColorHint="?txtColor" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:text="SEND"
            android:background="?attr/btnBgColor"
            android:textColor="?attr/btnTxtColor"/>
    </LinearLayout>
</RelativeLayout>