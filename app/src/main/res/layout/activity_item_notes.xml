<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.serveIt.employee_activities.item_notes">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp"
            android:background="?bgColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Quantity"
                    android:textColor="?secondaryTxtColor"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/decBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="-"
                    android:textColor="?txtColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="?secondaryTxtColor"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/incBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="+"
                    android:textColor="?txtColor"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/notes_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/help_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Add comments..."
                android:padding="20dp"
                android:textColorHint="?txtColor"
                android:textColor="?txtColor"/>

            <Button

                android:id="@+id/addBtn"
                android:layout_width="121dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="?btnBgColor"
                android:text="Add"
                android:textColor="?btnTxtColor" />


        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
